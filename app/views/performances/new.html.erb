<% if @performance.errors.full_messages.any? %>
  <% @performance.errors.full_messages.each do |error_message| %>
    <%= error_message %> <br />
  <% end %>
<% end %>

<%= form_for @performance do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true %>
  <%= f.fields :show_dates, model: f.object.show_dates do |sd_field| %>
    <%= sd_field.label :start_date %>
    <%= sd_field.date_field :start_date, required: true %>
    <%= sd_field.label :end_date %>
    <%= sd_field.date_field :end_date, required: true %>
  <% end %>

  <%= f.submit 'Create'%>
<% end %>
